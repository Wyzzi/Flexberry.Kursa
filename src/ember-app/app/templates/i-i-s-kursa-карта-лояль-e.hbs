<h3 class="ui header">{{t "forms.i-i-s-kursa-карта-лояль-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.ном
      class=(if (v-get validationModel "ном" "isInvalid") "error")
      label=(t "forms.i-i-s-kursa-карта-лояль-e.ном-caption")
      data-test-i-i-s-kursa-карта-лояль-e-ном=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ном" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.процСкид
      class=(if (v-get validationModel "процСкид" "isInvalid") "error")
      label=(t "forms.i-i-s-kursa-карта-лояль-e.процСкид-caption")
      data-test-i-i-s-kursa-карта-лояль-e-процСкид=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "процСкид" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.суммПокуп
      class=(if (v-get validationModel "суммПокуп" "isInvalid") "error")
      label=(t "forms.i-i-s-kursa-карта-лояль-e.суммПокуп-caption")
      data-test-i-i-s-kursa-карта-лояль-e-суммПокуп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "суммПокуп" "message")}}
  </div>
</form>
